generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Employee {
    id        Int      @id @default(autoincrement())
    name      String
    code      String   @unique
    createdAt DateTime @default(now())
    workShifts WorkShift[]
}

model WorkShift {
    id        Int      @id @default(autoincrement())
    employeeId Int
    start     DateTime
    end       DateTime?
    employee  Employee @relation(fields: [employeeId], references: [id])
}

model Admin {
    id        Int      @id @default(autoincrement())
    name      String
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
}
